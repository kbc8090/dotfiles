format = """
[┌](blue)\
[  ](bold purple)\
$directory\
$all\
$line_break\
[└](blue)\
$character"""

[character]
success_symbol = "[➤](red)[➤](yellow)[➤](green) "
error_symbol = "[➤](red)[➤](red)[➤](red) "

[directory]
style = "fg:bold cyan"
format = "[$path ]($style)"
read_only = ""
truncation_length = 6
truncation_symbol = '…/'
truncate_to_repo = false
